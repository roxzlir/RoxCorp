@{
    Layout = "_Layout2";
}


<div class="row">
    <div class="col-sm-2">
        <ul>
            @foreach (var item in Model.Leaves)
            {
                <li>
                    <a asp-action="Index" asp-route-leaveid="@item.LeaveId">@item.LeaveType</a>
                </li>
            }
        </ul>
    </div>
    <div class="col-sm-10">
        <table class="table">
            <tbody>
                <div class="leave-section">
                    @if (!string.IsNullOrEmpty(Model.selectedLeave))
                    {
                        <h2>@Model.selectedLeave</h2>
                    }
                    else
                    {
                        <h2>Welcome! Please select a leave type on the left menu</h2>
                    }
                </div>
                @if (!string.IsNullOrEmpty(Model.selectedLeave))
                {
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Phone number</th>
                            <th>Email</th>
                            <th>Messege</th>
                            <th>Request registered</th>
                            <th>Granted</th>
                        </tr>
                    </thead>
                    @foreach(var item in Model.Employees)
                    {
                        <tr>
                            <td>@item.EmployeeName</td>
                            <td>@item.EmployeePhone</td>
                            <td>@item.EmployeeEmail</td>
                            <td>@item.ApplyNote</td>
                            <td>@item.ApplyRegisteredDate.ToShortDateString()</td>
                            <td>@item.Granted</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>