@model MonthlySummaryViewModel

@{
    ViewData["Title"] = "Monthly Summary";
}

<h1>Monthly Summary</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="MonthlySummary" asp-controller="ApplyForLeaves" method="get">
            <div class="form-group">
                <label asp-for="Year" class="control-label">Year:</label>
                <input type="number" asp-for="Year" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Month" class="control-label">Month:</label>
                <select asp-for="Month" class="form-control">
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Leave Type</th>
            <th>Employee</th>
            <th>From Date</th>
            <th>To Date</th>
            <th>Note</th>
            <th>Registered Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Applies)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Leave.LeaveType)</td>
                <td>@Html.DisplayFor(modelItem => item.Employee.EmployeeEmail)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplyFromDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplyToDate)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplyNote)</td>
                <td>@Html.DisplayFor(modelItem => item.ApplyRegisteredDate)</td>
                <td class="btn-group btn-group-sm">
                    <a asp-action="Edit" asp-route-id="@item.ApplyForLeaveId" class="btn btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ApplyForLeaveId" class="btn btn-primary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ApplyForLeaveId" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
