@{
    Layout = "_Layout2";
}


<div class="row">
    <div class="col-sm-2">
        <ul>
            @foreach (var item in Model.Employees)
            {
                <li>
                    <a asp-action="Index" asp-route-employeeid="@item.EmployeeId">@item.EmployeeName</a>
                </li>
            }
        </ul>
    </div>
    <div class="col-sm-8">
        <table class="table">
            <tbody>
                <div class="employee-section">
                    @if (!string.IsNullOrEmpty(Model.selectedEmployee))
                    {
                        <h2>@Model.selectedEmployee</h2>
                    }
                    else
                    {
                        <h2>Welcome! Please select a name in the left menu</h2>
                    }
                </div>
                @if (!string.IsNullOrEmpty(Model.selectedEmployee))
                {
                <thead>
                    <tr>
                        <th>Type of leave</th>
                        <th>Applied period</th>
                        <th>Messege</th>
                        <th>Request registered</th>
                        <th>Granted</th>
                    </tr>
                </thead>
                    @foreach (var item in Model.Leaves)
                    {
                    <tr>
                        <td>@item.LeaveType</td>
                        <td>
                                @item.ApplyFromDate.ToShortDateString()
                            -
                                @item.ApplyToDate.ToShortDateString()
                        </td>
                        <td>@item.ApplyNote</td>
                        <td>@item.ApplyRegisteredDate.ToShortDateString()</td>
                        <td>@item.Granted</td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>