@model string

@{
    Layout = "_Layout";
}

<h2>Search for Employee Name</h2>

<form asp-controller="EmployeeNameLeave" asp-action="Search" method="get">
    <div class="form-group">
        <label for="employeeName">Employee Name:</label>
        <input type="text" id="employeeName" name="employeeName" class="form-control" value="@Model" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
